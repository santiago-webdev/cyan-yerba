FROM fedora-toolbox:36

RUN dnf upgrade --refresh -y

RUN dnf install -y \
  ShellCheck \
  bat \
  binutils \
  cmake \
  dnf-plugins-core \
  exa \
  fd-find \
  fuse \
  fuse-devel\
  fzf \
  g++ \
  gcc \
  gcc-c++ \
  gettext \
  gmp \
  gmp-devel \
  go \
  libnotify \
  libstdc++-static \
  libtool \
  lua \
  make \
  ncompress \
  ncurses \
  ncurses-compat-libs \
  ninja-build \
  npm \
  p7zip-plugins \
  perl \
  python \
  python-pip \
  ripgrep \
  unrar \
  unzip \
  wl-clipboard \
  xdg-user-dirs \
  xz \
  zip \
  zsh

RUN dnf clean all

CMD /bin/bash
