  g++ \
  gcc \
  gcc-c++ \
  gettext \
  gh \
  gmp \
  gmp-devel \
  go \
  libnotify \
  libstdc++-static \
  libtool \
  lua \
  make \
  mesa-dri-drivers \
  mesa-vulkan-drivers \
  ncompress \
  ncurses \
  ncurses-compat-libs \
  ninja-build \
  npm \
  p7zip-plugins \
  perl \
  python \
  python-pip \
  ripgrep \
  tree-sitter-cli \
  unrar \
  unzip \
  vulkan \
  wl-clipboard \
  xdg-user-dirs \
  xz \
  zip \
  zsh

RUN dnf upgrade --refresh --assumeyes

RUN dnf clean all

